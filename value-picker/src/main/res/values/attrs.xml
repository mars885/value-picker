<resources>

    <declare-styleable name="ValuePickerView">
        <attr name="vpv_areDividersEnabled" format="boolean"/>
        <attr name="vpv_isInfiniteScrollEnabled" format="boolean"/>
        <attr name="vpv_maxVisibleItems" format="integer"/>
        <attr name="vpv_textColor" format="color"/>
        <attr name="vpv_dividerColor" format="color"/>
        <attr name="vpv_flingSpeedFactor" format="float"/>
        <attr name="vpv_textSize" format="dimension"/>
        <attr name="vpv_textTypeface" format="reference"/>
        <attr name="vpv_divider" format="reference"/>
        <attr name="vpv_orientation" format="enum">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
    </declare-styleable>

</resources>
