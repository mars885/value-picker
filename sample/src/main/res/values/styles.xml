<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/title_margin_bottom</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/value_margin_bottom</item>
        <item name="android:textSize">@dimen/value_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TimePicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">false</item>
        <item name="vpv_maxVisibleItems">3</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_dividerColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/time_picker_text_size</item>
        <item name="vpv_orientation">vertical</item>
    </style>

    <style name="DatePicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">true</item>
        <item name="vpv_maxVisibleItems">5</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_dividerColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/date_picker_text_size</item>
        <item name="vpv_orientation">vertical</item>
    </style>

    <style name="TeamPicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">false</item>
        <item name="vpv_maxVisibleItems">5</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/team_picker_text_size</item>
        <item name="vpv_textTypeface">@font/ubuntu_mono_bold</item>
        <item name="vpv_divider">@drawable/team_picker_divider</item>
        <item name="vpv_orientation">vertical</item>
    </style>

    <style name="MovieFilteringPicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">true</item>
        <item name="vpv_maxVisibleItems">5</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_dividerColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/movie_filtering_picker_text_size</item>
        <item name="vpv_orientation">vertical</item>
    </style>

    <style name="RatingPicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">false</item>
        <item name="vpv_maxVisibleItems">3</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_dividerColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/rating_picker_text_size</item>
        <item name="vpv_orientation">horizontal</item>
    </style>

    <style name="ClothingSizePicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">true</item>
        <item name="vpv_maxVisibleItems">3</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/clothing_size_picker_text_size</item>
        <item name="vpv_divider">@drawable/clothing_size_picker_divider</item>
        <item name="vpv_orientation">horizontal</item>
    </style>

    <style name="PersonInfoPicker">
        <item name="vpv_areDividersEnabled">true</item>
        <item name="vpv_isInfiniteScrollEnabled">true</item>
        <item name="vpv_maxVisibleItems">3</item>
        <item name="vpv_textColor">@color/colorAccent</item>
        <item name="vpv_dividerColor">@color/colorAccent</item>
        <item name="vpv_textSize">@dimen/person_info_picker_text_size</item>
        <item name="vpv_orientation">horizontal</item>
    </style>

</resources>
