<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    tools:background="@color/colorPrimary">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dashboard_item_title_margin"
        android:layout_marginStart="@dimen/dashboard_item_title_margin"
        android:layout_marginEnd="@dimen/dashboard_item_title_margin"
        android:fontFamily="@string/font_family_medium"
        android:textSize="@dimen/dashboard_item_title_text_size"
        android:textColor="@color/colorPrimaryText"
        tools:text="Vertical Picker"/>

    <TextView
        android:id="@+id/descriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dashboard_item_description_margin_top"
        android:layout_marginBottom="@dimen/dashboard_item_description_margin"
        android:layout_marginStart="@dimen/dashboard_item_description_margin"
        android:layout_marginEnd="@dimen/dashboard_item_description_margin"
        android:textSize="@dimen/dashboard_item_description_text_size"
        android:textColor="@color/colorPrimaryText"
        android:lineSpacingExtra="@dimen/dashboard_item_description_line_spacing_extra"
        tools:text="A simple vertical picker that allows to pick time."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashboard_item_divider_height"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>